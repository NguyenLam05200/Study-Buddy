<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/course_card_gradient"
        android:padding="16dp">

        <!-- Tên khóa học -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:letterSpacing="0.03"
            android:text="Deadline title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Thời gian khóa học -->
        <TextView
            android:id="@+id/textViewDeadlineTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewName"
            android:layout_marginTop="4dp"
            android:letterSpacing="0.02"
            android:text="23h00 20/01/2025"
            android:textColor="#505050"
            android:textSize="15sp" />

        <!-- Ngày khóa học -->
        <TextView
            android:id="@+id/textViewDeadlineCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDeadlineTime"
            android:layout_marginTop="6dp"
            android:letterSpacing="0.02"
            android:text="Lập trình Mobile"
            android:textColor="#505050"
            android:textSize="15sp" />

        <!-- Nút chỉnh sửa -->
        <ImageButton
            android:id="@+id/buttonEditDeadline"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/buttonDeleteDeadline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/edit_course"
            android:src="@drawable/ic_edit" />

        <!-- Nút xóa -->
        <ImageButton
            android:id="@+id/buttonDeleteDeadline"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete_course"
            android:src="@drawable/ic_delete"
            app:tint="#FF3B30" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
