<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".ui.course.ManageCourseFragment">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/buttonSaveCourse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Tên khóa học -->
            <TextView
                android:id="@+id/textViewCourseNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextCourseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter course name"
                android:inputType="text" />

            <!-- Ngày trong tuần -->
            <TextView
                android:id="@+id/textViewDayOfWeekLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day of Week"
                android:textStyle="bold" />


            <FrameLayout
                android:id="@+id/spinnerFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="2dp">

                <!-- Spinner của bạn -->
                <Spinner
                    android:id="@+id/spinnerDayOfWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/textViewDayOfWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Hello"
                    android:textColor="@color/material_dynamic_primary0"
                    android:textSize="16sp" />
                <!-- Đường viền dưới cùng -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="8dp"
                    android:background="#8A000000" /> <!-- Khoảng cách nếu cần -->
            </FrameLayout>


            <!-- Thời gian bắt đầu -->
            <TextView
                android:id="@+id/textViewStartTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="HH:mm"
                android:inputType="none" />

            <!-- Thời gian kết thúc -->
            <TextView
                android:id="@+id/textViewEndTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="HH:mm"
                android:inputType="none" />

            <!-- Ngày bắt đầu -->
            <TextView
                android:id="@+id/textViewStartDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="dd-MM-YYYY"
                android:inputType="none" />

            <!-- Ngày kết thúc -->
            <TextView
                android:id="@+id/textViewEndDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="dd-MM-YYYY"
                android:inputType="none" />

            <!-- Phòng học -->
            <TextView
                android:id="@+id/textViewRoomLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter room (optional)"
                android:inputType="text" />

            <!-- Checkbox Reminder -->
            <CheckBox
                android:id="@+id/checkBoxReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable Reminder" />


        </LinearLayout>
    </ScrollView>

    <!-- Button cố định ở cuối -->
    <Button
        android:id="@+id/buttonSaveCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
