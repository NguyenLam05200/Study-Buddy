<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/course_frag">

    <fragment
        android:id="@+id/home_frag"
        android:name="com.example.studybuddy.ui.home.home_frag"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/gallery_frag"
        android:name="com.example.studybuddy.ui.gallery.gallery_frag"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/slideshow_frag"
        android:name="com.example.studybuddy.ui.slideshow.slideshow_frag"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/course_frag"
        android:name="com.example.studybuddy.ui.course.CourseFragment"
        android:label="@string/menu_course"
        tools:layout="@layout/fragment_course" >
        <action
            android:id="@+id/action_course_frag_to_manage_course_frag"
            app:destination="@id/manage_course_frag" />
    </fragment>

    <fragment
        android:id="@+id/manage_course_frag"
        android:name="com.example.studybuddy.ui.course.ManageCourseFragment"
        android:label="@string/course_manage"
        tools:layout="@layout/fragment_add_course">
        <argument
            android:name="courseId"
            app:argType="long"
            android:defaultValue="-1L" /> <!-- Giá trị mặc định khi không có CourseID -->
        <argument
            android:name="mode"
            app:argType="string"
            android:defaultValue="ADD" /> <!-- Giá trị mặc định -->
    </fragment>

    <fragment
        android:id="@+id/settings_frag"
        android:name="com.example.studybuddy.ui.settings.settings_frag"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>