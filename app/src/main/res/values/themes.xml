<resources>
    <!-- Typography Styles -->
    <style name="TextAppearance.StudyBuddy.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">32sp</item>
    </style>

    <style name="TextAppearance.StudyBuddy.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/karla_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.StudyBuddy" parent="Theme.Material3.DayNight">
        <!-- Customize Material3 colors from your Compose Color.kt -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primary_container</item>
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnPrimary">@color/light_on_primary</item>
        <item name="colorOnSecondary">@color/light_on_secondary</item>
        <item name="colorOnBackground">@color/light_on_background</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.StudyBuddy.Dark" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_container</item>
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnPrimary">@color/dark_on_primary</item>
        <item name="colorOnSecondary">@color/dark_on_secondary</item>
        <item name="colorOnBackground">@color/dark_on_background</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
</resources>

